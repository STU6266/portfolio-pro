<!--
  hangman.ejs
  ---------------------------------------------------------------------------
  Renders the browser-based Hangman game.
  - public/js/hangman.js contains the full game logic.
  - The template provides semantic containers for difficulty, status,
    ASCII figure and the on-screen keyboard.
-->

<main class="resume-layout">
  <%- include("partials/contactModal") %>

  <!-- Main Hangman card, visually consistent with other feature cards -->
  <section class="card hangman-card">
    <!-- Header with short project description -->
    <header class="hangman-header">
      <p class="project-tag">GAME · C# → JavaScript</p>
      <h1>Hangman (Web version)</h1>
      <p class="project-description">
        This is a small browser version of the original C# console Hangman game.
        Users can pick a difficulty, guess letters, and watch the ASCII hangman
        being drawn step by step.
      </p>

      <!-- Back button to the projects page -->
      <a href="/projects" class="btn-secondary hangman-back-button">
        ← Back to projects
      </a>
    </header>

    <!-- Controls: difficulty selector + "Start new game" button -->
    <section class="hangman-controls">
      <div class="hangman-field">
        <label for="hangman-difficulty">Difficulty</label>
        <select id="hangman-difficulty">
          <option value="easy">Easy (short words)</option>
          <option value="medium">Medium</option>
          <option value="hard">Hard (long words)</option>
        </select>
      </div>

      <button id="hangman-new-game" class="btn-primary">
        Start new game
      </button>
    </section>

    <!-- Status area: word display, counters and feedback text -->
    <section class="hangman-status">
      <!-- Current word (underscores + revealed letters) -->
      <div class="hangman-word-wrapper">
        <h2>Word</h2>
        <p id="hangman-word" class="hangman-word">
          <!-- content is injected by hangman.js -->
        </p>
      </div>

      <!-- Wrong guesses, guessed letters and message -->
      <div class="hangman-info">
        <p>
          Wrong guesses:
          <span id="hangman-wrong-count">0</span> /
          <span id="hangman-max">10</span>
        </p>
        <p>
          Guessed letters:
          <span id="hangman-guessed-letters">–</span>
        </p>
        <p id="hangman-message" class="hangman-message">
          Click "Start new game" to begin.
        </p>
      </div>
    </section>

    <!-- ASCII figure section -->
    <section class="hangman-figure-section">
      <h2>Hangman</h2>
      <pre id="hangman-figure" class="hangman-figure">
<!-- figure is drawn here by hangman.js -->
      </pre>
    </section>

    <!-- On-screen keyboard A–Z (buttons are injected by JS) -->
    <section class="hangman-keyboard-section">
      <h2>Guess a letter</h2>
      <div id="hangman-keyboard" class="hangman-keyboard">
        <!-- buttons A–Z are created in hangman.js -->
      </div>
    </section>
  </section>

  <!-- Attach the Hangman logic -->
  <script src="/js/hangman.js" defer></script>
</main>

