<!--
  footer.ejs
  ---------------------------------------------------------------------------
  Global footer with basic imprint link and social icons.
  - The "Impressum" link currently points to a static HTML file
    in the public folder (public/impressum.html). This can be
    replaced with an Express route and EJS view later if needed.
  - Social icons link to external profiles in a new tab.
-->

<footer>
  <div class="footer-container">
    <div class="footer-impressum">
      <a href="/impressum">Impressum</a>

    </div>

    <p class="footer-copy">&copy; 2025 Steven Kemendics</p>

    <nav class="footer-nav" aria-label="Social links">
      <a
        href="https://www.facebook.com/steven.kemendics"
        target="_blank"
        rel="noopener"
      >
        <img
          src="/images/facebook.png"
          alt="Facebook profile"
          class="social-icon"
        />
      </a>
      <a
        href="https://www.linkedin.com/in/steven-kemendics"
        target="_blank"
        rel="noopener"
      >
        <img
          src="/images/linkedin.png"
          alt="LinkedIn profile"
          class="social-icon"
        />
      </a>
    </nav>
  </div>
</footer>

<!--
  Global JS:
  - nav.js: mobile menu toggle (burger button).
  - Page-specific scripts (hangman, filament, etc.) are loaded inside
    each view, above this footer include.
-->
<script src="/js/nav.js" defer></script>

</body>
</html>
