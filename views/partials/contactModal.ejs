<div id="modal-overlay"></div>

<div
  id="contact-modal"
  role="dialog"
  aria-modal="true"
  aria-labelledby="contact-modal-title"
>
  <h2 id="contact-modal-title">Contact me</h2>
  <p class="contact-modal-subtitle">
    Send me a short message and how I can reach you. Your mail program will open with everything pre-filled.
  </p>

  <form id="contact-form">
    <label class="contact-field">
      <span>Your name</span>
      <input
        type="text"
        id="contact-name"
        name="name"
        placeholder="e.g. Sarah Müller"
      />
    </label>

    <label class="contact-field">
      <span>Company (optional)</span>
      <input
        type="text"
        id="contact-company"
        name="company"
        placeholder="e.g. ACME GmbH"
      />
    </label>

    <label class="contact-field">
      <span>How can I contact you?</span>
      <input
        type="text"
        id="contact-info"
        name="contact"
        placeholder="Email, phone or other contact info"
        required
      />
    </label>
    <p class="form-error" id="error-contact"></p>

    <label class="contact-field">
      <span>Message</span>
      <textarea
        id="contact-message"
        name="message"
        placeholder="Write your message here…"
        required
      ></textarea>
    </label>
    <p class="form-error" id="error-message"></p>

    <!-- Hier erscheint später die "kein Mailprogramm" Meldung -->
    <p class="form-error" id="mailto-error"></p>

    <div class="contact-actions">
      <button id="send-button" type="submit">Send message</button>
      <button id="close-button" type="button">Close</button>
    </div>
  </form>
</div>

<script src="/js/contact-modal.js" defer></script>
