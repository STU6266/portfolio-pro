<!--
  nav.ejs
  ---------------------------------------------------------------------------
  Primary site navigation.
  - Mobile toggle is handled by public/js/nav.js.
  - "Contact Me" uses a mailto: fallback and is enhanced by contact-modal.js.
  - activePage is set by the controller to highlight the current section.
-->

<nav class="site-nav" role="navigation" aria-label="Primary navigation">
  <!-- Mobile nav toggle button -->
  <button
    class="nav-toggle"
    id="nav-toggle"
    aria-expanded="false"
    aria-controls="primary-nav"
    aria-label="Open navigation menu"
  >
    <span class="nav-toggle-bar"></span>
    <span class="nav-toggle-bar"></span>
    <span class="nav-toggle-bar"></span>
  </button>

  <!-- Main nav list -->
  <ul id="primary-nav" class="nav-list">
    <li class="<%= activePage === 'resume' ? 'active' : '' %>">
      <a href="/resume">Resume</a>
    </li>

    <li class="<%= activePage === 'projects' ? 'active' : '' %>">
      <a href="/projects">Projects</a>
    </li>

    <li class="nav-contact">
      <!--
        Fallback behaviour:
        - If JavaScript is disabled or fails to load, this link opens the
          default mail client with a new message to the portfolio address.
        Enhanced behaviour:
        - contact-modal.js intercepts the click on #nav-contact-link,
          opens the contact modal and builds a mailto: URL with form values.
      -->
      <a
        href="mailto:stevenkemendics@gmail.com"
        id="nav-contact-link"
      >
        Contact Me
      </a>
    </li>
  </ul>
</nav>
